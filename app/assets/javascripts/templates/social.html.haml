%header.row
  .col-md-3
  .col-md-6
    .nav-bar-container
      %ul.nav-bar
        %li.pull-left
          %label.sr-only{'for' => 'keywords'}= 'Keywords'
          %input{'ng-model' => 'keywords',
                    'id' => 'keywords',
                    'autofocus' => '',
                    'type' => 'text',
                    'placeholder' => '日本語'}
          %button.btn.btn-primary.btn-sm{'ng-click' => 'search(keywords)',
                 'id' => 'search'}= 'Search'
        %li.pull-left.col-md-offset-1= 'List'
        %li.pull-left.col-md-offset-1
          %span.dropdown{'on-toggle' => "toggled(open)" }
            %a.dropdown-toggle{'href' => ''}= 'Graph'
            %ul.dropdown-menu
              %li{'ng-repeat' => 'item in data.items'}
                %a{'href' => '', 'ng-click' => "viewGraph(item.name)"} {{ item.name }}
        %li.pull-left.col-md-offset-1= 'Account'
  .col-md-3

%section.row.app-body
  .col-md-3
  .col-md-6
    %h3= 'Social Network Graph'
  .col-md-3

